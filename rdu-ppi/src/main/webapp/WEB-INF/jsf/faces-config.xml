
<faces-config version="2.0" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" 
xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee">
  
    <application>
  	<!-- la clase SpringBeanFacesELResolver se utiliza para llamar el bean del servicio a traves de la anotacion @ManagedProperty -->
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>es_MX</default-locale>
            <supported-locale>es_MX</supported-locale>                
        </locale-config>
        <resource-bundle>
            <base-name>globalRDU</base-name>
            <var>msgGlobal</var>    
        </resource-bundle>
    </application>
   
</faces-config> 